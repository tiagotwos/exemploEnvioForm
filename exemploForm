<?php
    if (isset($_POST["submit"])) {
        $name = $_POST['name'];
        $tel = $_POST['tel'];
        $email = $_POST['email'];
        $message = $_POST['message'];
        $human = intval($_POST['human']);
        $from = 'Ol치 nomedosite,'; 
        $to = ' email para qual o formulario vai ir '; 
        $subject = "Mensagem de $name";
        
        $body ="De: $name\n\n Telefone: $tel\n\ne-mail: $email\n\n Message:\n $message";

        // Check if name has been entered
        if (!$_POST['name']) {
            $errName = 'Digite seu nome.';
        }
        
        // Check if email has been entered and is valid
        if (!$_POST['email'] || !filter_var($_POST['email'], FILTER_VALIDATE_EMAIL)) {
            $errEmail = 'Digite um email valido.';
        }
        
        //Check if message has been entered
        if (!$_POST['message']) {
            $errMessage = 'Digite sua mensagem.';
        }
        //Check if simple anti-bot test is correct
        if ($human !== 5) {
            $errHuman = 'Seu anti-spam est치 incorreto';
        }

// If there are no errors, send the email
if (!$errName && !$errEmail && !$errMessage && !$errHuman) {
    if (mail ($to, $subject, $body, $from)) {
        $result='<div class="alert alert-success">Obrigado! enviado com sucesso.</div>';
    } else {
        $result='<div class="alert alert-danger">Erro ao enviar formul치rio, tente denovo. Caso o erro persistir, entre em contato conosco.</div>';
    }
}
    }
?>

